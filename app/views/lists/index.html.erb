<div class="container-show">
  <h1>List of lists</h1>
  <%= link_to 'Create new list', new_list_path, class:"btn btn-outline-primary" %>
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do%>
      <%# if list.photo.attached? %>
        <div class="card-product">
          <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill if list.photo.attached? %>
          <div class="card-product-infos">
            <div class="text"><h2><%= list.name %></h2></div>
              <div class="action">
                <%= link_to "", edit_list_path(list), class:"fas fa-pencil-alt" %>
                <%= link_to "",
                    list_path(list),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class:"far fa-trash-alt" %>
              </div>
          </div>
        </div>

    <% end %>
  <% end %>
