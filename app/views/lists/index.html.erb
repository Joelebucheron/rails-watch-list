<h1>List of lists</h1>


<ol class="list-group">
  <% @lists.each do |list| %>
      <li class="list-group-item d-flex"><%= link_to list.name, list_path(list) %>
      <div class="notification-actions">
        <%= link_to "Edit", edit_list_path(list), class:"fas fa-pencil-alt" %>
      </div>
      </li>
  <% end %>
</ol>

<%= link_to 'Create new list', new_list_path, class:"btn btn-outline-primary" %>
