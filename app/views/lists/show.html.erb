<h1 style='background-color: red'><%= @list.name %></h1>

<div class="container d-flex">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card p-1 m-2" style="width: 18rem;">
      <img class="card-img-top" src=<%= bookmark.movie.poster_url %> alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><em><%= bookmark.movie.overview %></em></p>
        <p><%= bookmark.movie.rating %>âœ®</p>
        <p>"<%= bookmark.comment %>"</p>
        <%= link_to "Remove",
                    bookmark_path(bookmark),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "ajouter un bookmark", new_list_bookmark_path(@list), class:"btn btn-outline-primary" %> <span><%= link_to "back to lists", lists_path(@list), class:"btn btn-outline-primary" %> </span>
