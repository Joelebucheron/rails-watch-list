<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<%= link_to "ajouter un bookmark", new_list_bookmark_path(@list), class:"btn btn-outline-primary" %> <span><%= link_to "back to lists", lists_path(@list), class:"btn btn-outline-primary" %> </span>
<div class="container d-flex">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card p-1 m-2" style="width: 18rem;">
      <img class="card-img-top" src=<%= bookmark.movie.poster_url %> alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><em><%= bookmark.movie.overview %></em></p>
        <p><%= bookmark.movie.rating %>âœ®</p>
        <p>"<%= bookmark.comment %>"</p>
        <%= link_to "Remove",
                    bookmark_path(bookmark),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-outline-danger" %>
      </div>
    </div>
  <% end %>
</div>
