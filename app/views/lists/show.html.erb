<h1>List#show</h1>
<p><%= @list.name %></p>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src=<%= bookmark.movie.poster_url %> alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><em><%= bookmark.movie.overview %></em></p>
        <p><%= bookmark.movie.rating %>âœ®</p>
        <p>"<%= bookmark.comment %>"</p>
        <%= link_to "Remove",
                    bookmark_path(bookmark),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</ul>

<%= link_to "ajouter un bookmark", new_list_bookmark_path(@list) %> <span><%= link_to "back to lists", lists_path(@list) %> </span>
